@model BankOfSimba.ViewModels.Home.HomeViewModel

<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>Simba</title>
    <link href="@Url.Content("~/css/style.css")" rel="stylesheet" type="text/css" />
</head>
<body>
    @{foreach (var animal in Model.bankAccount)
        {
            var king = animal.isKing ? "King" : "Slave";
            var number = @Model.bankAccount.IndexOf(animal) + 1;
            var goodguy = animal.isGood ? "Good guy" : "Bad Guy";

            <div class="row">
                <div class="@king">@number</div>
                <div class="@king">@animal.Name</div>
                <div class="@king">@animal.Balance.ToString("#,##0.00 Zebra")</div>
                <div class="@king">@king</div>
                <div class="@king">@goodguy</div>
            </div>
        }
    }
    <form class="form" action="/" method="post">
        <input type="text" name="Name" value="" />
        <input type="text" name="Balance" value="" />
        <div>
            <input type="radio" name="AnimalType" value="Parrot" checked> Parrot
            <input type="radio" name="AnimalType" value="Lion"> Lion
            <input type="radio" name="AnimalType" value="Monkey"> Monkey
        </div>
        <button type="submit" value="Submit">Submit</button>

    </form>
</body>
</html>